# Zadacha2
#include <stdio.h>
#include <math.h>
main(void)
{
    int a,b,c;
    printf("введите a, b, c: ");
    scanf("%d%d%d", &a, &b, &c);
    int D,d,x1,x2,x;
        D=b*b-4*a*c;
        if(D < 0)
        {
            printf("корней нет");
        }
        else
        {
            if(D==0)
            {
             x=-b/(2*a);
                printf("x= %d",x);
            }
            else
            {
             d=sqrt(D);
             x1=-b+d/(2*a);
             x2=-b-d/(2*a);
                printf("x1= %d, x2= %d",x1,x2);
            }
        }
    }
    return 0;
}
